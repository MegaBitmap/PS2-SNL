<Window x:Class="SimpleNeutrinoLoaderGUI.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleNeutrinoLoaderGUI"
        mc:Ignorable="d"
        Title="AboutWindow" Height="520" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF2D70B9" Offset="1"/>
            <GradientStop Color="#FFA1F9FF" Offset="0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBox x:Name="TextBoxAbout" FontSize="16" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontWeight="Bold" TextAlignment="Center" Margin="30"/>
    </Grid>
</Window>
